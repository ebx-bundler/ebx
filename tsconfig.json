{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "noImplicitReturns": true,
    "useUnknownInCatchVariables": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
